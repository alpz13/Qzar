extends layout
block body
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")

  //NAVIGATION barra de arriba SPACER
  div#wrapper
    nav(class='navbar navbar-inverse navbar-fixed-top' role='navigation' id='topbar')
      div(class='navbar-header')
        button(type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-ex1-collapse')
          span.sr-only Tog Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(class='navbar-brand' href='#') 
          div#logo-img(alt='Logo')
        //LADO DERECHO
      ul(class='nav navbar-right top-nav')

        //TERCER ICONO USUARIO
        li.dropdown
          a(href='#' class='dropdown-toggle' data-toggle='dropdown')
            i(class='fa fa-user') &nbsp
            label  #{usuario.nombre}
            //b.caret
        li
          a(href='/sesiones/cerrar')
            i(class='fa fa-fw fa-power-off')
            label CERRAR SESIÓN

      div(class='collapse navbar-collapse navbar-ex1-collapse')
        //MENU PRINCIPAL IZQUIERDO
        ul(class='nav navbar-nav side-nav')
          if !barraLateral
            li.activo
              a(href='/')
                i(class='fa fa-fw fa-dashboard')
                p.inline.leftsidebar INICIO
          else
            li
              a(href='/')
                i(class='fa fa-fw fa-dashboard')
                p.inline.leftsidebar INICIO
  
          // Modulos
          if barraLateral && barraLateral === 'modulos'
            li.activo
              a(href='/modulos')
                i(class='fa fa-fw fa-home')
                p.inline.leftsidebar MÓDULOS
          else
            li
              a(href='/modulos')
                i(class='fa fa-fw fa-home')
                p.inline.leftsidebar MÓDULOS

          // Retroalimentación
          if usuario.permisos.indexOf("ver retroalimentacion") >= 0
            if barraLateral && barraLateral === 'retroalimentacion'
              li.activo
                a(href='/retroalimentacion')
                  i(class='fa fa-fw fa-bookmark-o')
                  p.inline.leftsidebar RETROALIMENTACIÓN
            else
              li
                a(href='/retroalimentacion')
                  i(class='fa fa-fw fa-bookmark-o')
                  p.inline.leftsidebar RETROALIMENTACIÓN

          // Sectores
          if usuario.permisos.indexOf("ver sectores") >= 0
            if barraLateral && barraLateral === 'sector'
              li.activo
                a(href='/sector')
                  i(class='fa fa-fw fa-archive')
                  p.inline.leftsidebar SECTORES
            else
              li
                a(href='/sector')
                  i(class='fa fa-fw fa-archive')
                  p.inline.leftsidebar SECTORES

          // Categorias
          if usuario.permisos.indexOf("crear actividad") >= 0
            if barraLateral && barraLateral === 'categorias'
              li.activo
                a(href='/categoria')
                  i(class='fa fa-fw fa-book')
                  p.inline.leftsidebar CATEGORÍAS
            else
              li
                a(href='/categoria')
                  i(class='fa fa-fw fa-book')
                  p.inline.leftsidebar CATEGORÍAS

          // Actividades
          if usuario.permisos.indexOf("ver actividad") >= 0
            if barraLateral && barraLateral === 'actividades'
              li.activo
                a(href='/actividades')
                  i(class='fa fa-fw fa-edit')
                  p.inline.leftsidebar ACTIVIDADES
            else
              li
                a(href='/actividades')
                  i(class='fa fa-fw fa-edit')
                  p.inline.leftsidebar ACTIVIDADES

          // Usuarios
          if usuario.permisos.indexOf("ver usuario") >= 0
            if barraLateral && barraLateral === 'usuarios'
              li.activo
                a(href='/usuarios')
                  i(class='fa fa-fw fa-users')
                  p.inline.leftsidebar USUARIOS
            else
              li
                a(href='/usuarios')
                  i(class='fa fa-fw fa-users')
                  p.inline.leftsidebar USUARIOS

          // Roles
          if usuario.permisos.indexOf("ver rol") >= 0
            if barraLateral && barraLateral === 'roles'
              li.activo
                a(href='/roles')
                  i(class='fa fa-fw fa-male')
                  p.inline.leftsidebar ROLES
            else
              li
                a(href='/roles')
                  i(class='fa fa-fw fa-male')
                  p.inline.leftsidebar ROLES

          // Lotes
          //if barraLateral && barraLateral === 'lotes'
            li.activo
              a(href='/lotes')
                i(class='fa fa-fw fa-archive')
                p.inline.leftsidebar LOTES
          //else
            li
              a(href='/lotes')
                i(class='fa fa-fw fa-archive')
                p.inline.leftsidebar LOTES


    block content
